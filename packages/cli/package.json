{
  "name": "prpm",
  "version": "1.0.0",
  "description": "Prompt Package Manager CLI - Install and manage prompt-based files",
  "main": "dist/index.js",
  "bin": {
    "prpm": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "dev:with-build": "concurrently --kill-others --names \"BUILD,CLI\" \"tsc --watch --preserveWatchOutput\" \"nodemon --delay 1 --watch dist dist/index.js\"",
    "dev:build-only": "tsc --watch --preserveWatchOutput",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:ci": "jest --ci --coverage --watchAll=false --runInBand",
    "build:binary": "echo 'Binary builds deprecated - use npm install -g prpm or Homebrew instead'",
    "typecheck": "tsc --noEmit",
    "version:bump": "node scripts/bump-version.js",
    "version:major": "node scripts/bump-version.js major",
    "version:minor": "node scripts/bump-version.js minor",
    "version:patch": "node scripts/bump-version.js patch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cursor",
    "claude",
    "prompts",
    "cli",
    "package-manager"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pr-pm/prpm.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/pr-pm/prpm/issues"
  },
  "homepage": "https://github.com/pr-pm/prpm#readme",
  "author": "khaliqgant",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@pr-pm/converters": "^1.0.0",
    "@pr-pm/registry-client": "^2.0.0",
    "@pr-pm/types": "^1.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "commander": "^11.1.0",
    "jsonwebtoken": "^9.0.2",
    "posthog-node": "^5.10.0",
    "tar": "^6.2.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/tar": "^6.1.13",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "schemas",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
